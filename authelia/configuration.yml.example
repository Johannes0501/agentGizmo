---
# Authelia Configuration Template for gizmo.datastrøm.com
# Copy to configuration.yml and replace placeholder secrets

theme: dark

# Generate secrets with: openssl rand -hex 32
identity_validation:
  reset_password:
    jwt_secret: 'GENERATE_NEW_SECRET_HERE'

server:
  address: 'tcp://:9091'

log:
  level: info

totp:
  issuer: gizmo.datastrøm.com
  period: 30
  skew: 1

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      iterations: 3
      memory: 65536
      parallelism: 4
      key_length: 32
      salt_length: 16

access_control:
  default_policy: deny
  rules:
    - domain: gizmo.xn--datastrm-c5a.com
      policy: two_factor

session:
  name: authelia_session
  secret: 'GENERATE_NEW_SECRET_HERE'
  expiration: 12h
  inactivity: 45m
  remember_me: 1M
  cookies:
    - domain: xn--datastrm-c5a.com
      authelia_url: https://auth.xn--datastrm-c5a.com
      default_redirection_url: https://gizmo.xn--datastrm-c5a.com

  redis:
    host: redis
    port: 6379

regulation:
  max_retries: 3
  find_time: 2m
  ban_time: 5m

storage:
  encryption_key: 'GENERATE_NEW_SECRET_HERE'
  local:
    path: /config/db.sqlite3

notifier:
  disable_startup_check: true
  filesystem:
    filename: /config/notification.txt
